<br>
<div class="col-md-10 mx-auto">

  <h1>
    <span>Guitars</span>
  </h1>




<table class ="table">
  <thead>
    <tr>
      <th colspan="1"></th>
      <th scope="col">Brand</th>
      <th scope="col">Name</th>
      <th scope="col">Serial</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @guitars.each do |guitar| %>
      <tr scope="row">
        <td><%= link_to image_tag(guitar.img, class:"table-img"), guitar_path(guitar) %></td>
        <td><%= guitar.name %></td>
        <td><%= guitar.brand %></td>
        <td><%= guitar.serial %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

