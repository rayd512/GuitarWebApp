<div class="w-75 mx-auto">
  
  <h1>
    <span>My Guitars</span>
    <%= link_to 'Add New Guitar', new_guitar_path, class:"btn btn-success float-right" %>
  </h1>



<% if !@guitars.empty? %>
  <table class ="table">
    <thead>
      <tr>
        <th colspan="1"></th>
        <th scope="col">Brand</th>
        <th scope="col">Name</th>
        <th scope="col">Price</th>
        <th scope="col">Serial</th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% @guitars.each do |guitar| %>
        <tr scope="row">
          <td><%= link_to image_tag(guitar.img, class:"table-img"), guitar_path(guitar) %></td>
          <td><%= guitar.name %></td>
          <td><%= guitar.brand %></td>
          <td><%= guitar.price %></td>
          <td><%= guitar.serial %></td>
          <td><%= link_to 'Remove', guitar, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
<% else %>
  <h1>You haven't added a guitar yet</h1>
<% end %>
